{
    "autoDocstring.docstringFormat": "sphinx",

    "black-formatter.args": [
        "--skip-string-normalization"
    ],

    "cody.suggestions.mode": "off",

    "diffEditor.renderSideBySide": true,
    "diffEditor.useInlineViewWhenSpaceIsLimited": false,

    // editor
    "editor.accessibilitySupport": "off",
    "editor.columnSelection": false,
    "editor.cursorBlinking": "smooth",
    "editor.fontSize": 15,
    "editor.hover.delay": 200,
    "editor.inlineSuggest.suppressSuggestions": true,
    // "editor.maxTokenizationLineLength": 200000000000000,
    "editor.mouseWheelZoom": true,
    "editor.quickSuggestionsDelay": 50,
    "editor.rulers": [80],
    "editor.suggestSelection": "first",
    "editor.stickyScroll.maxLineCount": 1,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.nonBasicASCII": false,

    // explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },

    // extension
    "extensions.ignoreRecommendations": true,

    // file
    "files.autoSave": "off",
    "files.maxMemoryForLargeFilesMB": 30000,
    "files.eol": "\n",
    "files.associations": {
        "*.m": "matlab",
        "*.log.*": "log"
    },

    // python
    "pylint.args": [
        // "--extension-pkg-whitelist=cv2",
        // "--generated-members=numpy.* ,torch.* ,cv2.* , cv.*",
        // "--disable=consider-using-enumerate",
        "--errors-only"
    ],
    "python.defaultInterpreterPath": "C:\\Python312\\python.exe",
    "python.languageServer": "Default",
    "python.analysis.autoImportCompletions": false,
    "python.analysis.extraPaths": [
        "./*"
    ],
    "python.autoComplete.extraPaths": [
        "./*"
    ],

    // remote
    "remote.SSH.remotePlatform": {
        "140.113.203.50": "linux",
        "140.113.86.72": "linux",
        "140.113.203.55": "linux",
        "eating": "linux",
        "arch": "linux",
        "rpi4": "linux"
    },

    "security.workspace.trust.untrustedFiles": "open",

    // terminal
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.tabs.enabled": true,

    "vscode-pokemon.pokemonSize": "small",

    // window
    "window.autoDetectHighContrast": false,

    // workbench
    "workbench.editor.wrapTabs": true,
    "workbench.panel.defaultLocation": "right",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#da1515",
        "scrollbarSlider.activeBackground": "#da1515",
		"scrollbarSlider.background": "#da1515",
        "scrollbarSlider.hoverBackground": "#da1515",
        "editor.selectionBackground": "#da1515",
        "editor.selectionHighlightBackground": "#da15155a",
        "editor.findMatchHighlightBackground": "#da15155a",
        "editor.findMatchBackground": "#156ada"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },

    // other
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[python]": {
        "editor.bracketPairColorization.enabled": false,
        "editor.formatOnType": true,
    },
    "[yaml]": {
        "diffEditor.ignoreTrimWhitespace": false
    }
}
