    "autoDocstring.docstringFormat": "sphinx",

    // editor
    "editor.accessibilitySupport": "off",
    "editor.cursorBlinking": "smooth",
    "editor.fontSize": 15,
    "editor.quickSuggestionsDelay": 50,
    "editor.mouseWheelZoom": true,
    "editor.rulers": [80], 
    "editor.hover.delay": 200, 
    "editor.suggestSelection": "first",
    // "editor.maxTokenizationLineLength": 200000000000000,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.columnSelection": false,

    // explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    // extension
    "extensions.ignoreRecommendations": true,

    // file
    "files.autoSave": "off",
    "files.maxMemoryForLargeFilesMB": 30000,
    "files.eol": "\n", 
    "files.associations": {
        "*.m": "matlab",
        "*.log.*": "log"
    },

    // python
    "pylint.args": [
        "--extension-pkg-whitelist=cv2",
        "--errors-only",
        "--generated-members=numpy.* ,torch.* ,cv2.* , cv.*",
        "--disable=consider-using-enumerate",
        "--disable=consider-using-dict-items",
        "--disable=line-too-long",
        "--disable=missing-function-docstring",
        "--disable=missing-module-docstring"
    ],
    "python.defaultInterpreterPath": "C:\\Program Files\\Python310\\python.exe",
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": false,
    "python.analysis.extraPaths": [
        "./*"
    ],
    "python.autoComplete.extraPaths": [
        "./*"
    ],

    // remote
    "remote.SSH.remotePlatform": {
        "140.113.203.50": "linux",
        "140.113.86.72": "linux",
        "140.113.203.55": "linux",
        "eating": "linux",
        "arch": "linux",
        "rpi4": "linux"
    },

    // terminal
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.tabs.enabled": true,

    // window
    "window.autoDetectHighContrast": false,

    // workbench
    "workbench.editor.wrapTabs": true,
    "workbench.panel.defaultLocation": "right",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#da1515",
        "scrollbarSlider.activeBackground": "#da1515",
		"scrollbarSlider.background": "#da1515",
        "scrollbarSlider.hoverBackground": "#da1515",
        "editor.selectionBackground": "#da1515",
        "editor.selectionHighlightBackground": "#da1515",
        "editor.findMatchHighlightBackground": "#da1515",
        "editor.findMatchBackground": "#156ada"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },

    // other
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },

    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[python]": {
        "editor.bracketPairColorization.enabled": false,
        "editor.formatOnType": true,
    },
    "black-formatter.args": [
        "--skip-string-normalization"
    ],
    "editor.stickyScroll.maxLineCount": 1,
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ]
}
